<UserControl x:Class="Vocal.SpeakerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vocal"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="363">
    <Grid>
        <Label Content="Calibration Data" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="CalibrationList" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="337" ItemsSource="{Binding}" SelectionChanged="SelectionChanged"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" Width="75" Click="OnAdd"/>
    </Grid>
</UserControl>
