<Window x:Class="Vocal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vocal"
        xmlns:core="clr-namespace:System;assembly=mscorlib" 
        mc:Ignorable="d"
        Title="Vocal Control" Height="600" Width="800">
    
    <Window.Resources>
        <ObjectDataProvider x:Key="DecibelEnum" MethodName="GetValues" ObjectType="{x:Type core:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type Type="local:Decibel"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="ToneEnum" MethodName="GetValues" ObjectType="{x:Type core:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type Type="local:Tone"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Grid>
        <GroupBox Header="User Control" HorizontalAlignment="Left" Height="336" Margin="419,223,0,0" VerticalAlignment="Top" Width="363">
            <Grid>
                <ProgressBar x:Name="progress" HorizontalAlignment="Left" Height="15" Margin="10,35,0,0" VerticalAlignment="Top" Width="331"/>
                <Button x:Name="start" Content="Start" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="OnStartClick"/>
                <Button x:Name="stop" Content="Stop" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Click="OnStop"/>
                <TextBox x:Name="console" IsReadOnly="True" HorizontalAlignment="Left" Height="249" Margin="10,55,0,0" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="331" VerticalScrollBarVisibility="Auto"/>
            </Grid>
        </GroupBox>
        <TabControl x:Name="Option" HorizontalAlignment="Left" Height="208" Margin="419,10,0,0" VerticalAlignment="Top" Width="363">
            <TabItem Header="Trial">
                <Grid Background="#FFE5E5E5">
                    <GroupBox Header="Interval" HorizontalAlignment="Left" Height="160" Margin="10,10,0,0" VerticalAlignment="Top" Width="160">
                        <Grid>
                            <Label Content="Duration [ms]" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="intervalDuration" HorizontalAlignment="Left" Height="23" Margin="10,36,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Text="8000"/>
                            <Label Content="Waggle [ms]" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="intervalWaggle" HorizontalAlignment="Left" Height="23" Margin="10,90,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Text="1000"/>
                        </Grid>
                    </GroupBox>
                    <Label Content="Trial Count" HorizontalAlignment="Left" Margin="175,10,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="trialCount" HorizontalAlignment="Left" Height="23" Margin="175,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="20"/>
                </Grid>
            </TabItem>
            <TabItem Header="Device">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Calibration Data" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="calibration" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="337"/>
                </Grid>
            </TabItem>
            <TabItem Header="Trigger">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Trigger Level [V]" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="triggerVoltage" HorizontalAlignment="Left" Height="23" Margin="10,36,0,0" TextWrapping="Wrap" Text="3.5" VerticalAlignment="Top" Width="120"/>
                </Grid>
            </TabItem>
        </TabControl>
        <GroupBox x:Name="SoundList" Header="Sound List" HorizontalAlignment="Left" Height="549" Margin="10,10,0,0" VerticalAlignment="Top" Width="409">
            <Grid>
                <DataGrid x:Name="soundTable" HorizontalAlignment="Left" Height="465" Margin="0,10,-2,0" VerticalAlignment="Top" Width="399" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Frequency [Hz]" Binding="{Binding frequency}"/>
                        <DataGridComboBoxColumn Header="Decibel [dB]" SelectedItemBinding="{Binding decibel}" ItemsSource="{Binding Source={StaticResource DecibelEnum}}"/>
                        <DataGridTextColumn Header="Duration [ms]" Binding="{Binding duration.milliseconds}"/>
                        <DataGridComboBoxColumn Header="Tone Type" SelectedItemBinding="{Binding tone}" ItemsSource="{Binding Source={StaticResource ToneEnum}}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button Content="Add" HorizontalAlignment="Left" Margin="0,480,0,0" VerticalAlignment="Top" Width="75" Click="OnAddClick"/>
                <Button Content="Delete" HorizontalAlignment="Left" Margin="80,480,0,0" VerticalAlignment="Top" Width="75" Click="OnDeleteClick"/>
                <CheckBox x:Name="randomCheck" Content="Random" HorizontalAlignment="Left" Margin="332,480,0,0" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
