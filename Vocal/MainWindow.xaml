<Window x:Class="Vocal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vocal"
        mc:Ignorable="d"
        Title="Vocal Control" Height="600" Width="800">

    
    <Grid>
        
        <GroupBox Header="User Control" HorizontalAlignment="Left" Height="336" Margin="419,223,0,0" VerticalAlignment="Top" Width="363">
            <Grid>
                <ProgressBar x:Name="progress" HorizontalAlignment="Left" Height="15" Margin="10,35,0,0" VerticalAlignment="Top" Width="331"/>
                <Button x:Name="start" Content="Start" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="OnStartClick"/>
                <Button x:Name="stop" Content="Stop" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Click="OnStop"/>
                <local:TextConsole x:Name="Console" Margin="10,55,10,10"/>
            </Grid>
        </GroupBox>

        <TabControl x:Name="Option" HorizontalAlignment="Left" Height="208" Margin="419,10,0,0" VerticalAlignment="Top" Width="363">
            <TabItem Header="Trial">
                <Grid Background="#FFE5E5E5">
                    <local:IntervalControl x:Name="Interval"/>
                    <Label Content="Trial Count" HorizontalAlignment="Left" Margin="175,10,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="trialCount" HorizontalAlignment="Left" Height="23" Margin="175,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="20"/>
                </Grid>
            </TabItem>
            <TabItem Header="Speaker">
                <Grid Background="#FFE5E5E5">
                    <local:SpeakerControl x:Name="Speaker" Changed="OnChanged"/>
                </Grid>
            </TabItem>
            <TabItem Header="Trigger">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Trigger Level [V]" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="triggerVoltage" HorizontalAlignment="Left" Height="23" Margin="10,36,0,0" TextWrapping="Wrap" Text="3.5" VerticalAlignment="Top" Width="120"/>
                </Grid>
            </TabItem>
            <TabItem Header="Device">
                <Grid Background="#FFE5E5E5">
                    <local:DeviceControl x:Name="Configure"/>
                </Grid>
            </TabItem>
        </TabControl>
        
        <GroupBox x:Name="SoundList" Header="Sound List" HorizontalAlignment="Left" Height="549" Margin="10,10,0,0" VerticalAlignment="Top" Width="409">
            <Grid>
                <Button Content="Add" HorizontalAlignment="Left" Margin="0,480,0,0" VerticalAlignment="Top" Width="75" Click="OnAddClick"/>
                <Button Content="Delete" HorizontalAlignment="Left" Margin="80,480,0,0" VerticalAlignment="Top" Width="75" Click="OnDeleteClick"/>
                <ComboBox x:Name="Random" HorizontalAlignment="Left" Margin="258,480,0,0" VerticalAlignment="Top" Width="139" SelectedIndex="0">
                    <ComboBoxItem>Not</ComboBoxItem>
                    <ComboBoxItem>Partial Random</ComboBoxItem>
                    <ComboBoxItem>Full Random</ComboBoxItem>
                </ComboBox>
                <local:SoundTable x:Name="Table" Margin="10,22,10,69"/>
            </Grid>
        </GroupBox>
        
    </Grid>
</Window>
